snippet bib "Insert bibliography" b
\definecolor{azul}{rgb}{0.0, 0.2, 0.5}
\definecolor{vinho}{rgb}{0.5  0  0}

\usepackage[colorlinks=true, urlcolor=azul, citecolor=vinho, linkcolor=azul]{hyperref}
\usepackage{bookmark}
\usepackage[style=abnt,
			bibstyle=authoryear,
			uniquename=false,
			giveninits=true,
			citestyle=authoryear,
			hyperref=true,
			backref=false,
			natbib=true,
			backend=biber]{biblatex}
\addbibresource{${1:gitbib.bib}}

$0
endsnippet

